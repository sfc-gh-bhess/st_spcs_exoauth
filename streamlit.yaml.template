spec:
  containers:
    - name: streamlit
      image: <<repository_url>>/st_spcs_exoauth
      env:
        SNOWFLAKE_WAREHOUSE: <<warehouse_name>>
      volumeMounts:
        - name: st_secrets
          mountPath: /app/.streamlit
  endpoints:
    - name: streamlit
      port: 8501
      public: true
  volumes:
    - name: st_secrets
      source: <<secrets_stage>>
